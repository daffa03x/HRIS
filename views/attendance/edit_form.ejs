<div class="card m-4">
  <div class="card-header">
    <div class="d-flex align-items-center">
      <h4 class="card-title">Ubah Absen</h4>
    </div>
  </div>
  <div class="card-body">
    <form action="/attendance/update/<%= attendances.attendance_id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="employee_id">Nama Pegawai</label>
        <select name="employee_id" class="form-select">
          <% employees.forEach(employee => { %>
          <option value="<%= attendances.employee_id %>" <%= attendances.employee_id === employee.employee_id ? 'selected' : '' %>><%= employee.first_name %> - <%= employee.last_name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="date">Tanggal Absen</label>
        <input type="date" class="form-control" name="date" id="date" placeholder="Tanggal Absen" value="<%= attendances.date instanceof Date ? attendances.date.toISOString().split('T')[0] : '' %>"/>
      </div>
      <div class="form-group">
        <label for="check_in">Jam Masuk</label>
        <input type="time" class="form-control" name="check_in" id="check_in" placeholder="Jam Masuk" value="<%= attendances.check_in %>"/>
      </div>
      <div class="form-group">
        <label for="check_out">Jam Keluar</label>
        <input type="time" class="form-control" name="check_out" id="check_out" placeholder="Jam Keluar" value="<%= attendances.check_out %>"/>
      </div>
      <div class="form-group my-2">
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="/attendance" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</div>
