<div class="card m-4">
  <div class="card-header">
    <div class="d-flex align-items-center">
      <h4 class="card-title">Ubah Penggajian</h4>
    </div>
  </div>
  <div class="card-body">
    <form action="/payroll/update/<%= payroll.payroll_id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="employee_id">Pegawai</label>
        <select name="employee_id" class="form-select">
          <% employees.forEach(employee => { %>
          <option value="<%= employee.employee_id %>" <%= payroll.employee_id === employee.employee_id ? 'selected' : '' %>><%= employee.first_name %> <%= employee.last_name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="salary">Gaji Pokok</label>
        <input type="number" class="form-control" name="salary" id="salary" placeholder="Gaji Pokok" value="<%= payroll.salary %>"/>
      </div>
      <div class="form-group">
        <label for="bonus">Bonus</label>
        <input type="number" class="form-control" name="bonus" id="bonus" placeholder="Bonus" value="<%= payroll.bonus %>"/>
      </div>
      <div class="form-group">
        <label for="deductions">Potongan</label>
        <input type="number" class="form-control" name="deductions" id="deductions" placeholder="Potongan" value="<%= payroll.deductions %>"/>
      </div>
      <div class="form-group my-2">
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="/payroll" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</div>
