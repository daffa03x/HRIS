<div class="card m-4">
  <div class="card-header">
    <div class="d-flex align-items-center">
      <h4 class="card-title">Tambah Benefit</h4>
    </div>
  </div>
  <div class="card-body">
    <form action="/benefit/store" method="POST">
      <div class="form-group">
        <label for="employee_id">Pegawai</label>
        <select name="employee_id" class="form-select">
          <option value="" selected>-- Pilih Pegawai --</option>
          <% employees.forEach(employee => { %>
          <option value="<%= employee.employee_id %>"><%= employee.first_name %> <%= employee.last_name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="benefit_type">Tipe</label>
        <input type="text" class="form-control" name="benefit_type" id="benefit_type" placeholder="Tipe" />
      </div>
      <div class="form-group">
        <label for="start_date">Tanggal Mulai</label>
        <input type="date" class="form-control" name="start_date" id="start_date" placeholder="Tanggal Mulai" />
      </div>
      <div class="form-group">
        <label for="end_date">Tanggal Akhir</label>
        <input type="date" class="form-control" name="end_date" id="end_date" placeholder="Tanggal Akhir" />
      </div>
      <div class="form-group my-2">
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="/benefit" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</div>
