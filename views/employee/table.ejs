<div class="row m-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="d-flex align-items-center">
          <h4 class="card-title">Data Pegawai</h4>
          <a href="/employee/create" class="btn btn-primary btn-round ms-auto">
            <i class="fa fa-plus"></i>
            Tambah
          </a>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table id="multi-filter-select" class="display table table-striped table-hover">
            <thead>
              <tr>
                <th>Nama Lengkap</th>
                <th>Telepon</th>
                <th>Email</th>
                <th>Departemen</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>Nama Lengkap</th>
                <th>Telepon</th>
                <th>Email</th>
                <th>Departemen</th>
              </tr>
            </tfoot>
            <tbody>
              <% employees.forEach(employee => { %>
              <tr>
                <td><%= employee.first_name %> <%= employee.last_name %></td>
                <td><%= employee.phone %></td>
                <td><%= employee.email %></td>
                <td><%= employee.department %></td>
                <td>
                  <form action="/employee/destroy/<%= employee.employee_id %>?_method=DELETE" method="POST">
                    <div style="display: flex; gap: 0.5rem">
                      <a href="/employee/show/<%= employee.employee_id %>" class="btn btn-sm btn-info text-white"><i class="fas fa-eye"></i></a>
                      <a href="/employee/edit/<%= employee.employee_id %>" class="btn btn-sm btn-warning text-white"><i class="fas fa-edit"></i></a>
                      <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                    </div>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
