<div class="card m-4">
  <div class="card-header">
    <div class="d-flex align-items-center">
      <h4 class="card-title">Ubah Apply</h4>
    </div>
  </div>
  <div class="card-body">
    <form action="/application/update/<%= application.application_id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="job_id">Lowongan</label>
        <select name="job_id" class="form-select">
          <% recruitments.forEach(recruitment => { %>
          <option value="<%= recruitment.job_id %>" <%= application.job_id === recruitment.job_id ? 'selected' : '' %>><%= recruitment.job_title %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="candidate_name">Nama Kandidat</label>
        <input type="text" class="form-control" name="candidate_name" id="candidate_name" placeholder="Nama Kandidat" value="<%= application.candidate_name %>"/>
      </div>
      <div class="form-group my-2">
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="/application" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</div>
