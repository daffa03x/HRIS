<div class="card m-4">
  <div class="card-header">
    <div class="d-flex align-items-center">
      <h4 class="card-title">Tambah Recruitment</h4>
    </div>
  </div>
  <div class="card-body">
    <form action="/recruitment/store" method="POST">
      <div class="form-group">
        <label for="job_title">Lowongan</label>
        <input type="text" class="form-control" name="job_title" id="job_title" placeholder="Lowongan" />
      </div>
      <div class="form-group">
        <label for="department">Departemen</label>
        <input type="text" class="form-control" name="department" id="department" placeholder="Departemen" />
      </div>
      <div class="form-group my-2">
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="/recruitment" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</div>
